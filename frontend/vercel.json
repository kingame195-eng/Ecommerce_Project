{
  "buildCommand": "cd ../frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "publicPath": "/",
  "env": {
    "VITE_API_BASE_URL": "@vite-api-base-url"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
